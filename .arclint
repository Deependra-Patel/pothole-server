{
    "exclude": "(\\.pyc$|/migrations/|^.pylintrc$|.arclib/)",
    "linters": {
        "text": {
            "type": "text",
            "text.max-line-length": 99
        },
        "pylint": {
            "type": "pylint",
            "include": "(\\.py$)",
            "pylint.config": ".pylintrc"
        },
        "pep8": {
            "type": "pep8",
            "include": "(\\.py$)",
            "flags": [
                "--max-line-length=99"
            ]
        },
        "isort": {
            "type": "isort",
            "include": "(\\.py$)"
        },
        "csslint": {
            "type": "csslint",
            "include": "(\\.css$)"
        },
        "jscs": {
            "type": "jscs",
            "include": "(\\.js$)",
            "jscs.config": ".jscsrc"
        },
        "jsonlint": {
            "type": "jsonlint",
            "include": "(\\.json$|\\.JSON$)"
        },
        "merge-conflict": {
            "type": "merge-conflict"
        },
        "filename": {
            "type": "filename"
        },
        "chmod": {
            "type": "chmod"
        },
        "spelling": {
            "type": "spelling"
        }
    }
}
